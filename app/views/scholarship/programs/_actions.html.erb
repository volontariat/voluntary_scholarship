<% if !program.is_a?(Column) && (
	can?(:destroy, program) || can?(:edit, program) || (
      program.respond_to?(:state_events) && program.state_events.select{|event| can? event, program }.any?
    )
) %>
<div class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= t('general.actions') %></a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
  <% if can? :destroy, program %>    
    <li>
      <%= link_to(
        t('general.destroy'), scholarship_program_path(program.id), id: "program_#{program.id}", method: :delete, 
        confirm: t('general.questions.are_you_sure'),
        onclick: "delete_link('program_#{program.id}'); return false;"
      ) %>
    </li>
  <% end %>
  <% if can? :edit, program %>    
    <li><%= link_to t('general.edit'), eval("edit_scholarship_program_path(program)") %></li>
  <% end %>
  <% if program.respond_to? :state_events %>
    <li class="divider"></li>
  <% end %>
  <%= render 'shared/resource/event_elements', resource: program, type: 'programs' %>
  </ul>
</div>
<% end %>